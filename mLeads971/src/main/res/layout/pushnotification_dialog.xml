<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/frg_top"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/neweightfooter" >

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dip"
            android:ellipsize="end"
            android:gravity="center"
            android:text="@string/Notification_message"
            android:textColor="#fff"
            android:textSize="19dp"
            android:textStyle="bold" >
        </TextView>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_below="@+id/frg_top"
        android:layout_above="@+id/linearLayout2">


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/logo1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="#292929"
            android:textSize="22dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/notificationmsg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:minHeight="80dp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/shadow_box"/>




    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:layout_weight="0.8"
            android:background="@drawable/neweightattachmentbtn"
            android:text="@string/cancel"
            android:textStyle="bold" />

        <Button
            android:id="@+id/gotomleads"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="0.8"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:background="@drawable/neweightattachmentbtn"
            android:text="@string/gotomleads"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>