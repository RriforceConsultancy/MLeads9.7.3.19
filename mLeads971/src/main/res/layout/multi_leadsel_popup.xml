<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="275dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/optionbg1" >

    <LinearLayout
        android:id="@+id/llBackOperation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/logo1" />

        <CheckBox
            android:id="@+id/chkLeadSelectAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:text="@string/EMAIL_SELECT_ALL"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/LeadMultiSelect"
            android:textColor="#000000"
            android:textSize="15dp" />

        <ListView
            android:id="@+id/allleads_listview"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="5dp"
            android:cacheColorHint="@android:color/transparent"
            android:choiceMode="multipleChoice"
            android:divider="#000000"
            android:dividerHeight="1dp"
            android:fadingEdge="none"
            android:textColor="#000000" >
        </ListView>

        <LinearLayout
            android:id="@+id/btns_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1" >

            <Button
                android:id="@+id/btnOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/button_ok" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/button_cancel" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>