<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/neweightfooter" >

        <Button
            android:id="@+id/SendButton"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/neweightsubmit_btn"
            android:text="@string/SendalertButtonLabel"
            android:textColor="#000" />

        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="58dp"
            android:layout_gravity="center|right"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/BackButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center|right"
                android:layout_marginLeft="2dip"
                android:background="@drawable/neweightback_l"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BackButtonLabel"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#fff"/>

        </LinearLayout>

        <TextView
            android:id="@+id/MessageTitleTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/addMessageTitle"
            android:textColor="#fff"
            android:textSize="19dip"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="3dp" >

        <LinearLayout
            android:id="@+id/linearLayoutmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView android:id="@+id/lblCount"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:text="60"
            android:layout_gravity="left"
            android:textSize="15dip"
            android:textColor="#220000"/>

        <TextView android:id="@+id/textview2"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:text="@string/addMessage"
            android:layout_marginLeft="3dp"
            android:textSize="15dip"
            android:textColor="#220000"/>
        </LinearLayout>
        <EditText
            android:id="@+id/NotesmessageEditText"
            android:layout_width="fill_parent"
            android:layout_height="250dip"
            android:layout_gravity="center"
            android:maxLength="60"
            android:gravity="top"
            android:hint="@string/add_message_here"
            android:inputType="textCapSentences|textMultiLine">
            <requestFocus></requestFocus>
        </EditText>

        <TextView
            android:id="@+id/MessageNote"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/addMessageNote"
            android:textSize="19dip"
            android:textStyle="bold" />
    </LinearLayout>
    </LinearLayout>