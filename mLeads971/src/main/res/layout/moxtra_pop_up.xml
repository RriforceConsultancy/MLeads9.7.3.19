<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="275dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="#fff" >

    <LinearLayout
        android:id="@+id/llBackOperation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="-10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="@string/moxtra_meeting_invitation"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/logo1" />

        <!-- <CheckBox
            android:id="@+id/chkEmailSelectAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:text="@string/EMAIL_SELECT_ALL"
            android:textColor="#000000"
            android:textSize="15dp" /> -->

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:paddingLeft="10dp"
            android:text="@string/select_lead_to_invite"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <!-- <ListView
            android:id="@+id/listViewEmail"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:cacheColorHint="@android:color/transparent"
            android:textColor="#000000" >
        </ListView> -->

        <TextView
            android:id="@+id/txt_noleadfound_selectLead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/NoLeadsFoundLabel"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone" />
        
        <ListView
        android:id="@+id/listViewEmail"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:cacheColorHint="@android:color/transparent"
        android:choiceMode="singleChoice"
        android:dividerHeight="-1dp"
        android:listSelector="@drawable/mulitselection_listselector" >
    </ListView>
    
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            
            <Button
            android:id="@+id/btnOKEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/neweightattachmentbtn"
            android:text="@string/button_Ok"
            android:textColor="#fff"
            android:layout_weight="1"
            android:layout_marginRight="3dp" />
            
            <Button
            android:id="@+id/btnCancleEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/neweightattachmentbtn"
            android:text="@string/button_cancel"
            android:textColor="#fff"
            android:layout_weight="1"
            android:layout_marginLeft="3dp" />
            
            
        </LinearLayout>

        <!-- <Button
            android:id="@+id/btnCancleEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/neweightattachmentbtn"
            android:text="@string/button_cancel"
            android:textColor="#fff" /> -->
    </LinearLayout>

</LinearLayout>