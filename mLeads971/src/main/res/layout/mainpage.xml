<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical"
    android:weightSum="2"
    >
    

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/neweightfooter"
         >

        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="58dp"
            android:layout_gravity="center|right"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/BackButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center|right"
                android:layout_marginLeft="2dip"
                android:background="@drawable/neweightback_l"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BackButtonLabel"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#fff"/>

        </LinearLayout>

        <TextView
                    android:id="@+id/IconImageView"
                    android:layout_width="155dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/voicememo"
                    android:textColor="#fff"
                    android:textSize="19dp" >
                </TextView>

      <Button
            android:id="@+id/btn_save"
            android:layout_width="80dp"
                    android:layout_height="38dip"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/neweightsubmit_btn"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:onClick="OnClick"
                    android:text="@string/SaveButtonLabel"
                    android:textColor="#000" /> 
                     </FrameLayout>

   <LinearLayout
       android:id="@+id/event"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#fff" >

                <TextView
                    android:id="@+id/txt_selectevent"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"
                    android:text="@string/SelectEvent_OR_Group_Label"
                    android:textColor="#000" />

                <Spinner
                    android:id="@+id/EventSpinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:drawSelectorOnTop="true"
                    android:prompt="@string/Select_new_Event_OR_Group_Label" />
            </LinearLayout> 
    
    <LinearLayout
        android:id="@+id/btn_layout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="2" >
   
   <LinearLayout
       android:id="@+id/mainlayout"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="2"
        >

    </LinearLayout>
    
   

    <LinearLayout
        android:id="@+id/btn_layout1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="bottom|center"
        android:layout_weight="0.50"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:orientation="horizontal"
        android:background="#fff"
        android:weightSum="6" >

        <Button
            android:id="@+id/btn_black"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:onClick="OnClick"
            android:background="#ffff00" />

        <Button
            android:id="@+id/btn_red"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:onClick="OnClick"
            android:background="#ff0000" />

        <Button
            android:id="@+id/btn_blue"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:onClick="OnClick"
            android:background="#0000ff"/>
        
         <Button
            android:id="@+id/btn_green"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:onClick="OnClick"
            android:background="#00ff00"/>
         
         
         <Button
            android:id="@+id/btn_erase"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:onClick="OnClick"
            android:background="@drawable/erasericon"
            />
         
         <Button
            android:id="@+id/btn_clear"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:onClick="OnClick"
            android:background="@drawable/resetpaintview"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    </LinearLayout>

    

</LinearLayout>