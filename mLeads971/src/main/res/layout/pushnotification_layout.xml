<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearnotification"
    android:layout_width="315dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="#fff" >

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/notificationtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Notification"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/logo1" />


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >


            <Button
                android:id="@+id/btn_task"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:textColor="#fff"
                android:background="@drawable/neweightattachmentbtn"
                android:layout_weight="0.8"
                android:text="@string/TodayTask"
                android:visibility="gone"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_meeting"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:textColor="#fff"
                android:background="@drawable/neweightattachmentbtn"
                android:layout_weight="0.8"
                android:text="@string/MeetingTask"
                android:visibility="gone"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_cancel_logo"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:textColor="#fff"
                android:background="@drawable/neweightattachmentbtn"
                android:layout_weight="0.8"
                android:text="@string/cancel"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>