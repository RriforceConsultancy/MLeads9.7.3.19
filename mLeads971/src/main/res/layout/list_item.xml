<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip" >

    <!-- Title Of Song -->

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/imageView1"
        android:layout_marginRight="10dp"
        android:text="Rihanna Love the way lie nikesh chandaran  a how are u "
        android:textColor="#040404"
        android:textSize="15dip"
        android:textStyle="bold"
        android:typeface="sans"
        tools:ignore="NotSibling" />

    <!-- Artist Name -->

    <TextView
        android:id="@+id/lat_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginRight="10dp"
        android:layout_marginTop="1dip"
        android:text="Just gona stand there and ...asfasfasfasfasfasfasfasfasfasfasfasfasfas"
        android:textColor="#343434"
        android:textSize="10dip"
        android:visibility="gone"
         />

    <TextView
        android:id="@+id/long_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginRight="10dp"
        android:layout_marginTop="1dip"
        android:text="Just gona stand there and ...afasfasfasfasfasf"
        android:textColor="#343434"
        android:textSize="10dip"
        android:visibility="gone"
         />

    <!-- Rightend Arrow -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/arrow" />

</RelativeLayout>