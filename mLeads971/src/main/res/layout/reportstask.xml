     <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_marginTop="2dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/txt_teammember"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:text="@string/select_team_member"
            android:textColor="#000000" >
        </TextView>

        <Spinner
            android:id="@+id/spnrUser_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/selectteammember"
             >
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearWithin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_marginTop="2dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/txt_eventswithin"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:text="@string/duration_label"
            android:textColor="#000000" >
        </TextView>

        <Spinner
            android:id="@+id/eventsWithins_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/duration_label" >
        </Spinner>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearWithin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_marginTop="2dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/txt_eventswithin"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:text="@string/STATUS"
            android:textColor="#000000" >
        </TextView>

        <Spinner
            android:id="@+id/spnEventStatus"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/Task_Status_label" >
        </Spinner>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:src="#C9C9C9" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="center" android:layout_gravity="center" >


        <TextView
            android:id="@+id/FirstNameTextView"
            style="@style/LabelStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:text="@string/name_label"
            android:textColor="#000000"
            android:layout_marginLeft="5dp" android:textStyle="bold"/>


        <TextView
            android:id="@+id/StartDateTextView"
            style="@style/LabelStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:text="@string/START_DATE"
            android:textColor="#000000"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/StartDateTextView"
            style="@style/LabelStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:text="@string/END_DATE"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/taskStatusTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="@string/STATUS" >
        </TextView>
    </LinearLayout>
    
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:src="#C9C9C9" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="300dip"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/taskLinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

    <AbsoluteLayout
        android:id="@+id/ActionStripAbsoluteLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/strip_bg"
        android:gravity="center"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/deleteTask"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_x="30dip"
                android:gravity="center"
                android:src="@drawable/delete" 
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/editTask"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_x="140dip"
                android:gravity="center"
                android:src="@drawable/notes" />
        </LinearLayout>
    </AbsoluteLayout>

</LinearLayout>