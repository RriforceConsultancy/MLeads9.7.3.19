<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/neweightfooter" >

        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="58dp"
            android:layout_gravity="center|right"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/BackButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center|right"
                android:layout_marginLeft="2dip"
                android:background="@drawable/neweightback_l"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BackButtonLabel"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#fff"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:text="@string/view_event"
            android:textColor="#FFF"
            android:textSize="19dp"
            android:textStyle="bold" >
        </TextView>

        <Button
            android:id="@+id/SaveButton"
            android:layout_width="70dp"
            android:layout_height="30dip"
            android:layout_gravity="top|right"
            android:layout_marginRight="2dip"
            android:layout_marginTop="3dp"
            android:background="@drawable/blue_button"
            android:ellipsize="end"
            android:gravity="center"
            android:onClick="saveEventData"
            android:text="@string/SaveButtonLabel"
            android:textColor="#FFFFFF"
            android:visibility="gone" />
    </FrameLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="2dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >
             

                <AutoCompleteTextView
                    android:id="@+id/EventAutoCompleteTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="35dip"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:completionThreshold="1"
                    android:editable="false"
                    android:hint="@string/EventNameLabel"
                    android:textColorHint="#000"
                    android:focusable="false"
                    android:maxLength="120"
                    android:singleLine="true"
                    android:textSize="13dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                
                <EditText
                    android:id="@+id/LocationEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="35dip"
                    android:layout_gravity="center"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                     android:hint="@string/AddEventLocationLabel"
                    android:textColorHint="#000"
                    android:textSize="12dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                

                <EditText
                    android:id="@+id/CityEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="35dip"
                    android:layout_gravity="center"
                   android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                     android:hint="@string/AddEventCityLabel"
                    android:textColorHint="#000"
                    android:editable="false"
                    android:focusable="false"
                    android:maxLength="80"
                    android:singleLine="true"
                    android:textSize="12dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

              

                <EditText
                    android:id="@+id/StateEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="35dip"
                    android:layout_gravity="center"
                     android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                     android:hint="@string/AddEventStateLabel"
                    android:textColorHint="#000"
                    android:editable="false"
                    android:focusable="false"
                    android:maxLength="80"
                    android:singleLine="true"
                    android:textSize="12dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

               
                <EditText
                    android:id="@+id/CountryEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="35dip"
                    android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                     android:hint="@string/AddEventCountryLabel"
                    android:textColorHint="#000"
                    android:editable="false"
                    android:focusable="false"
                    android:maxLength="120"
                    android:singleLine="true"
                    android:textSize="12dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >


                <EditText
                    android:id="@+id/DateEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="35dip"
                    android:layout_gravity="center"
                       android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                     android:hint="@string/AddEventDateLabel"
                    android:textColorHint="#000"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true"
                    android:textSize="12dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

              

                <EditText
                    android:id="@+id/PurposeEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="35dip"
                    android:layout_gravity="center"
                       android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                     android:hint="@string/AddEventPurposeLabel"
                    android:textColorHint="#000"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true"
                    android:textSize="12dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

               

                <EditText
                    android:id="@+id/ContactPersonEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="35dip"
                    android:layout_gravity="center"
                      android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                     android:hint="@string/AddEventContactPersonLabel"
                    android:textColorHint="#000"
                    android:editable="false"
                    android:focusable="false"
                    android:maxLength="100"
                    android:singleLine="true"
                    android:textSize="12dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

               
                <EditText
                    android:id="@+id/PhoneEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="35dip"
                    android:layout_gravity="center"
                      android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColorHint="#000"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="@string/phone_hint"
                    android:inputType="phone"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:textSize="12dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left" 
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="@string/event_type"
                    android:textColor="#000000" >
                </TextView>

                <RadioGroup
                    android:id="@+id/rdbSelection"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:gravity="left" >

                    <RadioButton
                        android:id="@+id/radio0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/addeventPublic"
                        android:textColor="#000000" >
                    </RadioButton>

                    <RadioButton
                        android:id="@+id/radio1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/addeventPrivate"
                        android:textColor="#000000" >
                    </RadioButton>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"
                    android:text="@string/AddLeadNotesLabel"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/NotesButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:textColor="#fff"
                    android:background="@drawable/neweightattachmentbtn"
                    android:text="@string/notes" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>