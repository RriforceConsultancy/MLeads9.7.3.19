<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="275dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="#fff" >

    <LinearLayout
        android:id="@+id/llBackOperation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="-10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="@string/choose_option"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/logo1" />
        
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="#4d4d4d" >

            <LinearLayout
                android:id="@+id/Lin_Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/editTask"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center|left"
                    android:gravity="center"
                    android:src="@drawable/neweightedit" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Lin_View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/ViewTask"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:background="@drawable/neweightview"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Lin_Delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/deleteTask"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center|right"
                    android:gravity="center"
                    android:src="@drawable/neweightdelete" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnCancleEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/neweightattachmentbtn"
            android:text="@string/button_cancel"
            android:textColor="#fff" />
    </LinearLayout>

</LinearLayout>