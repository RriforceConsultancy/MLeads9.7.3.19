<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_marginTop="5dip"
    android:background="@drawable/list_bg"
    android:gravity="center_vertical"
    android:padding="3dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp" >

        <!-- @android:drawable/ic_menu_close_clear_cancel -->

        <ImageButton
            android:id="@+id/btnBSocial"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:padding="20dp"
            android:src="@drawable/b_social_icon"
            android:background="@null" 
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btnBSocial"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/EventNameTextView"
                style="@style/LabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:gravity="left"
                android:singleLine="true"
                android:text="@string/EventTitleLabel"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/LocationTextView"
                style="@style/LabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:gravity="left"
                android:singleLine="true"
                android:text="@string/AddEventLocationLabel"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/CityTextView"
                style="@style/LabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:gravity="left"
                android:singleLine="true"
                android:text="@string/AddEventCityLabel"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/DateTextView"
                style="@style/LabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:gravity="left"
                android:singleLine="true"
                android:text="@string/AddEventDateLabel"
                android:textColor="#000000" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>