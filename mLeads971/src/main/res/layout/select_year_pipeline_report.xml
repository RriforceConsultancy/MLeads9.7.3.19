<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/pipeline_report"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />
    
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_marginTop="2dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/txt_teammember"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:text="@string/select_year_label"
            android:textColor="#000000" >
        </TextView>

        <Spinner
            android:id="@+id/spnrselect_year"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/select_year" >
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:weightSum="2" >
        
        <Button
            android:id="@+id/GenerateReport"
            android:layout_width="150dip"
            android:layout_height="35dip"
            android:layout_gravity="center"
            android:textSize="14dp"
            android:layout_weight="1"
            android:layout_marginRight="3dip"
            android:layout_marginLeft="2dp"
            android:background="@drawable/neweightattachmentbtn"
            android:gravity="center"
            android:text="@string/generateReport"
            android:textColor="#FFFFFF" />
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="150dip"
            android:layout_height="35dip"
            android:layout_gravity="center"
            android:textSize="14dp"
            android:layout_marginRight="2dip"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/neweightattachmentbtn"
            android:gravity="center"
            android:text="@string/button_cancel"
            android:textColor="#FFFFFF" />
        
    </LinearLayout>
     

</LinearLayout>