<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/com_picsy_view_control_switch_animation_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/com_picsy_activity_camera_switch_background"
        android:visibility="gone"/>
	
    <LinearLayout
        android:id="@+id/com_picsy_view_control_tab_tray_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <!--<ImageView-->
            <!--android:id="@+id/com_picsy_view_control_capture_imageview"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_horizontal|center_vertical"-->
            <!--android:layout_marginBottom="@dimen/com_picsy_padding_medium"-->
            <!--android:src="@drawable/com_picsy_view_control_capture"-->
            <!--android:visibility="invisible"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/com_picsy_activity_camera_header_background">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight=".33"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/com_picsy_padding_medium"
                android:layout_marginBottom="@dimen/com_picsy_padding_medium">

                <ImageView
                    android:id="@+id/com_picsy_view_control_select_album_grid_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/com_picsy_padding_medium"
                    android:src="@drawable/help_icon"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight=".33"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:id="@+id/com_picsy_view_control_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/com_picsy_padding_medium"
                    android:src="@drawable/com_picsy_view_control_switch"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/com_picsy_view_control_capture_imageview"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal|center_vertical"

                    android:src="@drawable/camera"
                    android:visibility="visible"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight=".33"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/com_picsy_padding_medium"
                android:layout_marginBottom="@dimen/com_picsy_padding_medium">

                <com.memtrip.picsy.view.ToggleView
                    android:id="@+id/com_picsy_view_control_flash_toggleview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/com_picsy_padding_medium"/>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</merge>
